# CC Dev Atlassian Integration Environment Configuration

# Atlassian Configuration
ATLASSIAN_URL=https://levelup2x.atlassian.net
ATLASSIAN_USERNAME=your-username@domain.com
ATLASSIAN_API_TOKEN=your-api-token

# Webhook Configuration
WEBHOOK_PORT=3000
WEBHOOK_SECRET=your-webhook-secret-key

# TaskMaster Integration
TASKMASTER_PATH=/adaptai/ceo/cso/repos/awesome-claude-code/cc_dev/config/taskmaster-local

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/cc-dev-atlassian/integration.log

# Health Monitoring
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_ENABLED=true

# Rate Limiting
JIRA_RATE_LIMIT=10
CONFLUENCE_RATE_LIMIT=8
JSM_RATE_LIMIT=5

# Feature Flags
SYNC_ENABLED=true
AUTO_PROJECT_CREATION=true
DOCUMENTATION_AUTOMATION=true
JSM_INTEGRATION=true

# Nova Agent Configuration
NOVA_AGENT_DEFAULT_ID=prime-devops
NOVA_AGENT_DEFAULT_DEPT=DevOps

# Development/Testing
NODE_ENV=development
DEBUG=cc-dev:*

# MCP Integration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000